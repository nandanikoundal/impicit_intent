<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/Guide_v_10"
        app:layout_constraintGuide_percent=".10"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Guide_v_90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <EditText
        android:id="@+id/phn"
        android:layout_width="315dp"
        android:layout_height="44dp"
        android:drawableLeft="@drawable/ic_baseline_call_24"
        android:hint="enter phone number"
        android:inputType="textPhonetic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="153dp"
        android:layout_height="49dp"
        android:layout_marginTop="52dp"
        android:text="dial"
        app:layout_constraintHorizontal_bias="0.771"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/etMailto"
        android:layout_width="307dp"
        android:layout_height="65dp"
        android:layout_marginTop="112dp"
        android:hint="To : Email Address"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etSubject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Subject"
        app:layout_constraintBottom_toTopOf="@id/etMailMess"
        app:layout_constraintEnd_toStartOf="@id/Guide_v_90"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/Guide_v_10"
        app:layout_constraintTop_toBottomOf="@id/etMailto" />

    <EditText
        android:id="@+id/etMailMess"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Email Message"
        android:lines="3"
        app:layout_constraintEnd_toStartOf="@id/Guide_v_90"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/Guide_v_10"
        app:layout_constraintTop_toBottomOf="@id/etSubject" />

    <Button
        android:id="@+id/btnMail"
        android:layout_width="132dp"
        android:layout_height="41dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:text="Mail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.824"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484" />

    <EditText
        android:id="@+id/sms"
        android:layout_width="324dp"
        android:layout_height="51dp"
        android:layout_marginTop="376dp"
        android:drawableLeft="@drawable/ic_baseline_sms_24"
        android:hint="enter your sms"
        android:inputType="textShortMessage"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="153dp"
        android:layout_height="49dp"
        android:layout_marginTop="436dp"
        android:text="Sms"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/share"
        android:layout_width="323dp"
        android:layout_height="40dp"
        android:layout_marginTop="500dp"
        android:drawableLeft="@drawable/ic_baseline_share_24"
        android:hint="enter your massage you want share"
        android:inputType="textShortMessage"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="153dp"
        android:layout_height="49dp"
        android:layout_marginTop="540dp"
        android:text="Share"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tvRating"
        android:layout_width="319dp"
        android:layout_height="52dp"
        android:layout_marginTop="596dp"
        android:text="Rating"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="152dp"
        android:layout_height="49dp"
        android:layout_marginTop="656dp"
        android:text="rating"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>








